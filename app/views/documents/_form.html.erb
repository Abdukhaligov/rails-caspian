<%= form_with(model: document, local: true) do |form| %>
  <% if document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
      <% document.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.order(:name),:id,:name, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :voucher_id %>
    <%= form.collection_select :voucher_id, Voucher.order(:name),:id,:name, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :path %>
    <%= form.text_field :path, id: :document_path %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
