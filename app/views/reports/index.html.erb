<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Event</th>
      <th>Topic</th>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th>File</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.user ? report.user.name : '' %></td>
        <td><%= report.event ? report.event.name : '' %></td>
        <td><%= report.topic ? report.topic.name : '' %></td>
        <td><%= report.name %></td>
        <td><%= report.description %></td>
        <td><%= report.status %></td>
        <td><%= report.file %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

