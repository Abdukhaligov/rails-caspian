<%= form_with(model: report, local: true) do |form| %>
  <% if report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.order(:name), :id, :name, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :event_id %>
    <%= form.collection_select :event_id, Event.order(:name), :id, :name, include_blank: true %>

  </div>

  <div class="field">
    <%= form.label :topic_id %>
    <%= form.collection_select :topic_id, Topic.order(:name), :id, :name, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :report_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :report_description %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.number_field :status, id: :report_status %>
  </div>

  <div class="field">
    <%= form.label :file %>
    <%= form.text_field :file, id: :report_file %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
