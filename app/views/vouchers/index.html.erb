<p id="notice"><%= notice %></p>

<h1>Vouchers</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Membership</th>
      <th>Name</th>
      <th>Description</th>
      <th>Template</th>
      <th>Uniq</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vouchers.each do |voucher| %>
      <tr>
        <td><%= voucher.event ? voucher.event.name : '' %></td>
        <td><%= voucher.membership ? voucher.membership.name : '' %></td>
        <td><%= voucher.name %></td>
        <td><%= voucher.description %></td>
        <td><%= voucher.template %></td>
        <td><%= voucher.uniq %></td>
        <td><%= link_to 'Show', voucher %></td>
        <td><%= link_to 'Edit', edit_voucher_path(voucher) %></td>
        <td><%= link_to 'Destroy', voucher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

